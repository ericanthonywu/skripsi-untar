<%- include('../../block/header') %>

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center mb-4">
        <a href="<%= APP_URL %>kategori" class="btn btn-sm btn-primary shadow-sm">Kembali</a>
    </div>
    <div class="d-sm-flex align-items-center mb-4">
        <h1 class="h3 text-gray-800">Form Ubah Kategori</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form id="ubah_kategori">
                <div class="form-group row">
                    <input type="hidden" name="id" value="<%= data.id %>">
                    <label for="nama" class="col-sm-2 col-form-label">Nama Kategori</label>
                    <div class="col-sm-10">
                        <input id="nama" name="nama" type="text" class="form-control"
                               placeholder="Masukkan Nama Kategori ..." required value="<%= data.nama %>">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Ubah</button>
            </form>
        </div>
    </div>
</div>

<%- include('../../block/footer') %>